@{
    
}

<div class="box box-danger">
    <div class="box-body">
        <form class="form-horizontal" action="~/Account/ChangePassword" method="post">
            <div style="color:red">
                @Html.ValidationMessage("Error0","")
            </div>
            <div style="color:red">
                @Html.ValidationMessage("Error1","")
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Mật khẩu cũ</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" placeholder="Nhập mật khẩu cũ" name="oldPassword">
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Mật khẩu mới</label>
                <div class="col-sm-10">
                    <input type="password" class="form-control" name="newPassword">
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Nhập lại mật khẩu mới</label>
                <div class="col-sm-10">
                    <input type="password" class="form-control" name="comfirmNewPassword">
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2"></label>
                <div class="col-sm-10">
                    <button type="submit" class="btn btn-danger">
                        <i class="fa fa-remove"></i> Đổi mật khẩu
                    </button>
                    <a href="~/Admin/Dashboard" class="btn btn-default">Quay lại</a>
                </div>
            </div>


        </form>
    </div>
</div>