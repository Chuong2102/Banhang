@model SV20T1080026.DomainModels.Supplier
@using SV20T1080026.BusinessLayers;
@using SV20T1080026.Web;
@{
    
}


<div class="box box-primary">
    <div class="box-body">
        @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
        {
            <div class="alert alert-warning">
                <p>@ViewBag.ErrorMessage</p>
            </div>
        }
        <form action="~/Admin/Supplier/Save" method="post">
            <input type="hidden" name="@nameof(Model.SupplierID)" value="@Model.SupplierID" />
            <div class="form-group">
                <label>Tên nhà cung cấp</label>
                @Html.TextBoxFor(c => c.SupplierName, new{ @class="form-control", @autofocus="autofocus"})
                @Html.ValidationMessageFor(m => m.SupplierName,"", new {@style="color:red"})
            </div>
            
            <div class="form-group">
                <label>Tên giao dịch</label>
                @Html.TextBoxFor(c => c.ContactName, new{ @class="form-control", @autofocus="autofocus"})
                @Html.ValidationMessageFor(m => m.ContactName,"", new {@style="color:red"})
            </div>

            <div class="form-group">
                <label>Địa chỉ</label>
                @Html.TextBoxFor(c => c.Address, new{ @class="form-control", @autofocus="autofocus"})
                @Html.ValidationMessageFor(m => m.Address,"", new {@style="color:red"})
            </div>
            
            <div class="form-group">
                <label>Tỉnh thành</label>
                @Html.DropDownListFor(c => c.Provice, SelectListHelper.Provinces(), new {@class="form-control"})
                @Html.ValidationMessageFor(m => m.Provice,"", new {@style="color:red"})
            </div>

            <div class="form-group">
                <label>Số điện thoại</label>
                @Html.TextBoxFor(c => c.Phone, new {@class="form-control"})
                @Html.ValidationMessageFor(m => m.Phone,"", new {@style="color:red"})
            </div>

            <div class="form-group">
                <label>Email</label>
                @Html.TextBoxFor(c => c.Email, new {@class="form-control"})
                @Html.ValidationMessageFor(m => m.Email,"", new {@style="color:red"})
            </div>

            <div class="">
                <button type="submit" class="btn btn-primary">
                    <i class="fa fa-floppy-o"></i> Lưu dữ liệu
                </button>

                <a href="~/Admin/Category" class="btn btn-default">Quay lại</a>
            </div>
        </form>
    </div>
</div>