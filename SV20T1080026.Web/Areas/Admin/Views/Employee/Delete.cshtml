@model SV20T1080026.DomainModels.Employee
@{
    ViewBag.Title = "Xóa nhân viên";
}


<div class="box box-danger">
    <div class="box-body">
        <form action="~/Admin/Employee/Delete/@Model.EmployeeID" method="post" class="form-horizontal">
            
            <div class="form-group">
                <label class="control-label col-sm-2">Họ và tên</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" value="@Model.FullName" autofocus>
                </div>
            </div>
            @{
                string bd = Model.BirthDate.ToString("dd/M/yyyy", System.Globalization.CultureInfo.InvariantCulture);
            }
            <div class="form-group">
                <label class="control-label col-sm-2">Ngày sinh</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" value="@bd" autofocus>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Địa chỉ</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" value="@Model.Address" autofocus>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Email</label>
                <div class="col-sm-10">
                    <input type="email" class="form-control" value="@Model.Email">
                </div>
            </div>
            @{
                var isWork = Model.IsWorking == true ? "Đang làm việc" : "Không còn làm việc";
            }
            <div class="form-group">
                <label class="control-label col-sm-2">Trạng thái</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" value="@isWork">
                </div>
            </div>

            @{
                string urlAvatar = string.IsNullOrEmpty(Model.Photo) ? "/themes/dist/img/user4-128x128.jpg" : Model.Photo;
            }

            <div class="form-group">
                <label class="control-label col-sm-2">Ảnh cá nhân:</label>
                <div class="col-sm-10">
                    <img class="img-responsive" src="@urlAvatar" alt="Photo">
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2"></label>
                <div class="col-sm-10">
                    <button type="submit" class="btn btn-danger">
                        <i class="fa fa-remove"></i> Xóa nhân viên
                    </button>
                    <a href="~/Admin/Employee" class="btn btn-default">Quay lại</a>
                </div>
            </div>
        </form>
    </div>
</div>


