@model SV20T1080026.DomainModels.Category
@{
    ViewBag.Title = "Xóa loại hàng";
}


<div class="box box-danger">
    <div class="box-body">
        <form action="~/Admin/Category/Delete/@Model.CategoryID" method="post">
            <div class="form-group" style="border-bottom: solid 1px grey">
                <label class="control-label">Tên loại hàng</label>
                <p class="form-control-static">
                    @Model.CategoryName
                </p>
            </div>

            <div class="form-group" style="border-bottom: solid 1px grey">
                <label class="control-label">Mô tả</label>
                <p class="form-control-static">
                    @Model.Description
                </p>
            </div>
            

            <div class="">
                <button type="submit" class="btn btn-danger">
                    <i class="fa fa-remove"></i> Xóa dữ liệu
                </button>

                <a href="~/Admin/Category" class="btn btn-default">Quay lại</a>
            </div>
        </form>
    </div>
</div>


